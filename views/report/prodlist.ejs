<h1>Product Listing</h1>

<% if (allrecs.length > 0) {%>
    <table>
        <tr border=1>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Price</th>
            <th>Status</th>
        </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.product_id %></td>
                <td><%= recref.productname %></td>
                <td><%= recref.category_id %></td>
                <td><%= recref.supplier_id %></td>
                <td><%= recref.prodprice %></td>
                <td><%= recref.status %></td>
            </tr>
        <% }); %>
    </table>

<% } else { %>
    <p>No Records Available</p>
<% } %>

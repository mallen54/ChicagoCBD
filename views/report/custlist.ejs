<h1>Customer Listing</h1>

<% if (allrecs.length > 0) {%>
    <table>
        <tr border=1>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.customer_id %></td>
                <td><%= recref.firstname %></td>
                <td><%= recref.lastname %></td>
            </tr>
        <% }); %>
    </table>

<% } else { %>
    <p>No Records Available</p>
<% } %>
